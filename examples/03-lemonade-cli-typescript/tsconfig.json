{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],

    /* Strict Type Checking - THE WHOLE POINT */
    "strict": true,

    /* Module Resolution */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Output */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Other */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
